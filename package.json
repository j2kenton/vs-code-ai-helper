{
  "name": "vs-code-ai-helper",
  "displayName": "VS Code AI Helper",
  "description": "A VS Code extension for helping developers utilize AI tools and LLMs in their work",
  "version": "0.0.1",
  "publisher": "j2kenton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/j2kenton/vs-code-ai-helper.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vs-code-ai-helper.helloWorld",
        "title": "AI Helper: Hello World"
      },
      {
        "command": "vs-code-ai-helper.selectMetaFolder",
        "title": "AI Helper: Select Meta Resources Folder"
      }
    ],
    "configuration": {
      "title": "VS Code AI Helper",
      "properties": {
        "vs-code-ai-helper.metaResourcesPath": {
          "type": "string",
          "default": "",
          "scope": "resource",
          "description": "Workspace folder path for storing meta-level resources (logs, documentation, work tracking)"
        },
        "vs-code-ai-helper.promptDismissed": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "When true, suppresses folder configuration prompts permanently for this workspace"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.2"
  }
}
